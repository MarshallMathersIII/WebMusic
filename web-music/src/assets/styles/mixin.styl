@import './variable.styl'
// 不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
// 按钮样式
btn()
  margin 20px 10px
  height 40px
  background-color $color-theme
  color #ffffff
  line-height 40px
  text-align center
  border-radius 5px
  // 按钮不可点击样式
btn-inactive()
  margin 20px 10px
  height 40px
  background-color $color-theme
  color #ffffff
  line-height 40px
  text-align center
  border-radius 5px
  opacity 0.5
// 扩展点击区域
extend-click()
  position relative
  &:before
    content ''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px
// 分割线
divider()
  height 4px
  background-color #F5F5F5
divider-1()
  height 1px
  background-color #F5F5F5
title()
  font-size $font-size-medium
  font-weight bold
  color black
tips()
  font-size $font-size-medium
  color grey
